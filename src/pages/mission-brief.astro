            margin-bottom: 2rem;
            position: relative;
        }

        .classified-header::before {
            content: '⚡';
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.5rem;
        }

        .classified-header::after {
            content: '⚡';
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.5rem;
        }

        /* Document Pages */
