            background: rgba(255,255,255,0.4);
            border: 2px solid #8a7a5a;
            padding: 1.5rem;
            position: relative;
        }

        .personnel-file::before {
            content: 'CLASSIFIED';
            position: absolute;
            top: -10px;
            right: 10px;
            background: #ff6b6b;
            color: white;
            padding: 2px 8px;
            font-size: 0.7rem;
            font-weight: bold;
            transform: rotate(15deg);
        }

        .personnel-file.declassified::before {
            content: 'DECLASSIFIED';
            background: #4a5d3a;
            color: white;
        }

        .personnel-name {
            font-size: 1.3rem;
            color: #4a5d3a;
            font-weight: bold;
            margin-bottom: 0.5rem;
            letter-spacing: 1px;
        }

        .personnel-rank {
            color: #6b7a5b;
            font-size: 0.9rem;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .personnel-bio {
            line-height: 1.6;
            color: #2d2d1f;
        }

        /* Mission Objectives */
        .objectives-list {
            list-style: none;
            padding: 0;
            counter-reset: objective-counter;
