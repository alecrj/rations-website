        .stamp-2 { bottom: 30px; left: 30px; transform: rotate(8deg); background: rgba(0, 100, 0, 0.6); }
        .stamp-3 { top: 50%; left: 20px; transform: translateY(-50%) rotate(-90deg); background: rgba(0, 0, 255, 0.6); }

        /* Responsive */
        @media (max-width: 768px) {
            .nav-content {
                flex-direction: column;
                gap: 1rem;
                padding: 1rem;
            }

            .nav-links {
                gap: 1rem;
            }

            .document-container {
                padding: 0 1rem;
            }

            .document-page {
                padding: 2rem 1.5rem;
            }

            .doc-title {
                font-size: 1.8rem;
                letter-spacing: 2px;
            }

            .doc-info {
                grid-template-columns: 1fr;
            }
        }
    </style>
