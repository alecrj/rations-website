            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            background: rgba(0,0,0,0.1);
        }

        .nav-links a:hover, .nav-links a.active {
            color: #8FBC8F;
            border-color: #8FBC8F;
            background: rgba(143, 188, 143, 0.1);
            text-shadow: 0 0 5px rgba(143, 188, 143, 0.5);
        }

        /* Document Container */
        .document-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        .classified-header {
            background: #2d2d1f;
            color: #4a5d3a;
            padding: 1rem;
            text-align: center;
            font-weight: bold;
