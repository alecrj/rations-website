        .objective-description {
            color: #2d2d1f;
            line-height: 1.6;
        }

        /* Document Stamps */
        .document-stamps {
            position: absolute;
        }

        .stamp {
            position: absolute;
            background: rgba(255, 0, 0, 0.6);
            color: white;
            padding: 8px 12px;
            border: 2px solid rgba(255, 0, 0, 0.8);
            font-weight: bold;
            font-size: 0.8rem;
            letter-spacing: 1px;
            box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
