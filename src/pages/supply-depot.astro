                linear-gradient(-45deg, #d4c19e 25%, transparent 25%);
            background-size: 200px 200px, 30px 30px, 30px 30px;
            color: #2d2d1f;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Navigation - ORIGINAL DESKTOP STYLES */
        .nav-container {
            background: 
                linear-gradient(90deg, rgba(45, 45, 31, 0.9) 0%, rgba(60, 60, 40, 0.9) 100%),
                url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 50 50"><rect width="50" height="50" fill="%23545438"/><path d="M0 25h50M25 0v50" stroke="%23333" stroke-width="0.5" opacity="0.3"/></svg>');
